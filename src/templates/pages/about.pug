            li.contacts__item
              svg.contacts__image
                use(xlink:href="assets/images/sprite/sprite.svg#envelope2")
              span.contacts__text astahov@gmail.com
            li.contacts__item
              svg.contacts__image
                use(xlink:href="assets/images/sprite/sprite.svg#phone")
              span.contacts__text +7 931 200 93 24
            li.contacts__item
              svg.contacts__image
                use(xlink:href="assets/images/sprite/sprite.svg#map_marker")
              span.contacts__text Новосибирск, ул. Инская, д.14
      include ../common/footer