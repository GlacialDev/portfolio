          li.hamburger-menu__nav-item
            a.hamburger-menu__nav-link(href="./index.html") Авторизация

  .header__container
    if !isBlog
      svg.header__background-text
        use(xlink:href="assets/images/sprite/sprite.svg#portfolio_header")
    else
      svg.header__background-text
        use(xlink:href="assets/images/sprite/sprite.svg#blog_header")

    .header__nav
      .header__socials.socials
        ul.socials__list
          li.socials__item
            a(href="").socials__link
              svg.socials__icon
                use(xlink:href="assets/images/sprite/sprite.svg#vk")
          li.socials__item
            a(href="").socials__link
              svg.socials__icon
                use(xlink:href="assets/images/sprite/sprite.svg#github")
          li.socials__item
            a(href="").socials__link
              svg.socials__icon
                use(xlink:href="assets/images/sprite/sprite.svg#in")
      a.header__menu
        .header__hamburger-menu
    .header__who
      .profile
        .profile__image

        if !isBlog
          .profile__name Владимир Астахов
          .profile__desc Личный сайт веб разработчика
        else
          .profile__title Блог
          .profile__desc Статьи, которые я написал
    .header__arrow
      .arrow
        a.arrow__link
          svg.arrow__icon
            use(xlink:href="assets/images/sprite/sprite.svg#portf_arrow_down")